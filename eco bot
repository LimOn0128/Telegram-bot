import telebot
import random
from telebot.types import Message

bot = telebot.TeleBot('7703771192:AAHdLX5FfcYv4XidVXUleNs9hP05T6K-Fyc', parse_mode='HTML')

@bot.message_handler(commands=['start'])
def cmd_start(message: Message):
    bot.reply_to(message, '   Привет! Меня зовут Эко бот! \nЯ познакомлю вас с причинами загрязнений и экологических проблем, о последствиях, и расскажу как совместными силами можно спасти нашу планету! \nЧтобы узнать что я умею нажмите /help ')

@bot.message_handler(commands=['help'])
def cmd_help(message: Message):
    bot.reply_to(message, '/start - Познакомиться \n/help - Помощь \n/problems - Расскажет какие существуют проблемы \n/solution - Расскажет какие пути решения экологических проблем ')

@bot.message_handler(commands=['problems'])
def cmd_problem(message: Message):
    bot.reply_to(message, 'На земле очень много экологических проблем. Например: \n1-вырубка лесов \n2-парниковый эффект \n3-браконьерство\n4-загрязнение природной среды\n5- загрязнение водоемов\nЧтобы прочитать более подробно о них, напишите их номер, например: 1')
    bot.register_next_step_handler(message, get_num)

def get_num(message: Message):
    number = message.text
    if number == "1":
        with open('pictures/pic1.jpeg', 'rb') as file:
            bot.send_photo(message.chat.id, file)
            bot.reply_to(message, 'Ежегодно в результате расширения пахотных угодий и другой деятельности человека с лица земли исчезает 10 млн гектаров лесов и лесонасаждений. Это оборачивается стремительным сокращением биологического разнообразия планеты.')

    if number == "2":
        with open('pictures/pic2.png', 'rb') as file:
            bot.send_photo(message.chat.id, file)
            bot.reply_to(message, 'Парниковый эффект - это процесс повышения температуры поверхности Земли за счет того, что парниковые газы задерживают солнечное тепло, которое в противном случае ушло бы в космос. По сути эти газы "окутывают" нашу планету, помогая поддерживать высокую температуру у ее поверхности.')
    
    if number == "3":
        with open('pictures/pic3.jpg', 'rb') as file:
            bot.send_photo(message.chat.id, file)
            bot.reply_to(message, 'Браконьерство – незаконная охота, а также незаконные промышленное и любительское рыболовство, сбор растений и другие действия, нарушающие природоохранное законодательство государства. Они могут привести к уменьшению биоразнообразия и к вымиранию редких видов растений и животных.')
    
    if number == "4":
        with open('pictures/pic4.jpg', 'rb') as file:
            bot.send_photo(message.chat.id, file)
            bot.reply_to(message, 'Факторы загрязнения окружающей среды: энергетика, промышленность (особенно нефтеперерабатывающая, химическая, металлургическая, объекты атомного производства и др.), транспорт, сельское хозяйство (отходы животно-водческих комплексов, птицеферм, удобрения, пестициды), жилищно-коммунальное хозяйство.')
    
    if number == "5":
        with open('pictures/pic5.jpg', 'rb') as file:
            bot.send_photo(message.chat.id, file)
            bot.reply_to(message, 'Мировой океан загрязняется нефтепродуктами, поступающими в него как в результате обычной деятельности по добыче и транспортировке нефти, так и в результате аварий, а также смываемыми с дорог. В результате деятельности человека океан попадает широкий спектр растворённых в воде загрязняющих веществ — пестициды, хлорорганические соединения, фенолы, тяжёлые металлы, радиоактивные вещества.')

@bot.message_handler(commands=['solution'])
def cmd_solution(message: Message):
    bot.reply_to(message, 'Давайте спасем мир вместе! Вот случайный пример, как вы можете помочь нашей планете: ')
    sol = random.choice(['Стать волонтером', 'Сортировать мусор', 'Убирать мусор на природе', 'Поддерживать фонды помощи животным', 'Сажать деревья', 'Выбрать электротранспорт', 'Ненужный костер затушить и засыпать землей.'])
    bot.reply_to(message, sol)

bot.polling()
